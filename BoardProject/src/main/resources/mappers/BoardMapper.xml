<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.BoardProject.mapper.BoardMapper">
    <sql id="boardColumns">
        idx
        ,title
        ,content
        ,writer
        ,view_cnt
        ,notice_yn
        ,secret_yn
        ,delete_yn
        ,insert_time
        ,update_time
        ,delete_time
    </sql>
<!--전달받은 파라미터는 #{ } 표현식을 사용해서 처리합니다.-->
    <insert id="insertBoard" parameterType="BoardDTO">
        INSERT INTO tb_board(
                             <include refid="boardColumns"/>
        )   values (
                    #{idx}
                    ,#{title}
                    ,#{content}
                    ,#{writer}
                    ,0
                    ,IFNULL(#{notice_yn}, 'N')
                    ,IFNULL(#{secret_yn}, 'N')
                    ,'N'
                    ,NOW()
                    ,NULL
                    ,NULL
        )
    </insert>

    <select id="selectBoardDetail" parameterType="Long" resultType="BoardDTO">
        SELECT
            <include refid="boardColumns"/>
        FROM
            tb_board
        WHERE
            delete_yn = 'N'
        AND
            idx = #{idx}
    </select>

    <update id="updateBoard" parameterType="BoardDTO">
        UPDATE tb_board
        SET
            update_time = NOW()
            ,title = #{title}
            ,content = #{content}
            ,writer = #{writer}
            ,notice_yn = IFFNULL(#{notice_yn}, 'N')
            ,secret_yn = IFFNULL(#{secret_yn}, 'N')
        WHERE
            idx = #{idx}
    </update>
    <!--long은 64bit 정수값을 표현하는 데이터 타입으로 8byte의 메모리 공간을 사용한다.Long은 64bit정수 값을
    표현하지만 이것은 클래스이다.-->
    <update id="deleteBoard" parameterType="long">
        UPDATE tb_board
        SET
            delete_yn = 'Y'
            ,delete_time = NOW()
        WHERE
            idx = #{idx}
    </update>

    <select id="selectBoardList" parameterType="BoardDTO" resultType="BoardDTO">
        SELECT
            <include refid="boardColumns"/>
        FROM
             tb_board
        WHERE
            delete_yn = 'N'
        ORDER BY
            noice_yn ASC
            ,idx DESC
            ,insert_time DESC
    </select>

    <select id="selectBoardTotalCount" parameterType="BoardDTO" resultType="int">
        SELECT
            COUNT (*)
        FROM
            tb_board
        WHERE
            delete_yn = 'N'
    </select>
</mapper>